<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1000000" android:versionName="1.0-SNAPSHOT@${env.BUILD_NUMBER}" package="net.illusor.swipeplayer">

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:debuggable="false" android:icon="@drawable/swipe_player_icon" android:label="Swipe Player" android:name=".SwipeApplication">

        <activity android:launchMode="singleTop" android:name=".activities.SwipeActivity" android:screenOrientation="portrait" android:theme="@style/Theme.SwipePlayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".services.SoundService"/>

        <receiver android:name="net.illusor.swipeplayer.services.MediaButtonReceiver">
            <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>