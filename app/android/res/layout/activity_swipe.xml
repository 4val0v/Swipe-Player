<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/id_swipe_view_pager" />

            <net.illusor.swipeplayer.widgets.DurationDisplayView
                android:id="@+id/id_audio_durations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/color_fragment_browser">

            <ToggleButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/id_playlist_shuffle"
                android:background="@drawable/btn_shuffle_mode"
                android:layout_marginBottom="7dp"
                android:textOff=""
                android:textOn=""/>

            <ToggleButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/id_playlist_repeat"
                android:src="@drawable/ic_playlist_repeat_off"
                android:background="@drawable/btn_repeat_mode"
                android:layout_marginTop="7dp"
                android:textOff=""
                android:textOn=""/>

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

    <fragment
        android:id="@+id/id_audio_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="net.illusor.swipeplayer.fragments.AudioControlFragment" />

</LinearLayout>
