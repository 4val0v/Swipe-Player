<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:swp="http://schemas.android.com/apk/res/net.illusor.swipeplayer"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <net.illusor.swipeplayer.widgets.FormattedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_audio_control_title1"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            swp:Font="PTSerifBold"
            swp:TextColor="#ffffff"
            swp:HeaderTextSize="25sp"
            swp:LineTextSize="20sp"
            swp:IsWrapping="true"/>

    <net.illusor.swipeplayer.widgets.FormattedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_audio_control_artist"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="16dp"
            swp:Font="RobotoLight"
            swp:TextColor="#000000"
            swp:HeaderTextSize="20sp"/>

</LinearLayout>