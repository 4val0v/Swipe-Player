<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:swp="http://schemas.android.com/apk/res/net.illusor.swipeplayer">

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="bottom"
        android:id="@+id/id_audio_control_progress"
        android:progressDrawable="@drawable/seekbar_layers"
        android:thumb="@android:color/white"
        android:max="100"
        android:progress="50"
        android:layout_marginBottom="7dp" />

    <net.illusor.swipeplayer.widgets.FormattedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_audio_control_title1"
        android:text="The Great Gig in Great"
        android:textColor="@android:color/white"
        android:textSize="12.4pt"
        android:autoText="false"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        swp:Font="PTSerifBold"/>

    <net.illusor.swipeplayer.widgets.FormattedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_audio_control_title2"
        android:text="Gig in the Sky"
        android:textColor="@android:color/transparent"
        android:textSize="8pt"
        android:layout_marginLeft="14dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:visibility="gone"
        swp:Font="PTSerifBold"/>

    <net.illusor.swipeplayer.widgets.FormattedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_audio_control_artist"
        android:text="The Dark Side Of The Moon"
        android:textColor="@android:color/black"
        android:textSize="8pt"
        android:layout_marginLeft="14dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        swp:Font="RobotoLight"/>

</merge>

