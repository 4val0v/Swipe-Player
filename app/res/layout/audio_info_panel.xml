<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#8D004C">

<!--<merge xmlns:android="http://schemas.android.com/apk/res/android">-->

    <SeekBar android:layout_width="match_parent"
             android:layout_height="10dp"
             android:layout_gravity="bottom"
             android:progressDrawable="@drawable/seekbar_layers"
             android:thumb="@android:color/transparent"
             android:max="100"
             android:progress="50"
             android:layout_marginBottom="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/id_audio_control_title1"
              android:text="The Great Gig in Great"
              android:textColor="@android:color/white"
              android:textSize="19.1pt"
              android:autoText="false"
              android:ellipsize="end"
              android:singleLine="true"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/id_audio_control_title2"
              android:text="Gig in the Sky"
              android:textColor="@android:color/white"
              android:textSize="11.8pt"
              android:layout_marginLeft="20dp"
              android:singleLine="true"
              android:ellipsize="end"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/id_audio_control_artist"
              android:text="The Dark Side Of The Moon"
              android:textColor="@android:color/black"
              android:textSize="11.8pt"
              android:layout_marginLeft="20dp"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="15dp"/>

<!--</merge>-->

</LinearLayout>
