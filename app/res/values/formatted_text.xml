<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="FormattedTextView">
        <attr name="Font" format="enum">
            <enum name="RobotoLight" value="0"/>
            <enum name="RobotoMedium" value="1"/>
            <enum name="PTSans" value="2"/>
            <enum name="PTSansNarrow" value="3"/>
            <enum name="PTSerifBold" value="4"/>
            <enum name="PTSerifItalic" value="5"/>
        </attr>
        <attr name="HeaderTextSize" format="dimension"/>
        <attr name="LineTextSize" format="dimension"/>
        <attr name="LineSpacing" format="dimension"/>
        <attr name="CharsToEllipsize" format="integer"/>
        <attr name="IsWrapping" format="boolean"/>
        <attr name="TextColor" format="color"/>
    </declare-styleable>
</resources>